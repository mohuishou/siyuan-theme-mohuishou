// 编辑器区域样式设置
@import "font.styl"
@import "var.styl"
@import "node.styl"

.vditor-reset
  @import "code.styl"

  // 标签
  node-wrap("tag")

  // 块引用
  node-wrap("block-ref", "blockref")

  // 行内代码
  code:not(.hljs)
    wrap("code")


  // mark
  mark
    padding-left 4px
    padding-right 4px
    padding-bottom 2px
    border-radius 2px

  // 链接
  .vditor-ir__link
    text-decoration: none
    color primary-color
    font-weight 500

  // 引用
  blockquote
    border-left 0.25em solid primary-color
    background primary-bg