// 编辑器区域样式设置
@import "font.styl"
@import "var.styl"

.vditor-reset
  @import "editor/*.styl"

  // mark
  mark
    padding-left 4px
    padding-right 4px
    padding-bottom 2px
    border-radius 2px

  // 链接
  .vditor-ir__link
    text-decoration: none
    color primary-color
    font-weight 500

  // 引用
  blockquote
    border-left 0.25em solid primary-color
    background primary-bg
    margin 4px