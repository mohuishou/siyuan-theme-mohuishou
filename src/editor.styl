// 编辑器区域样式设置
@import "font.styl"
@import "var.styl"

.vditor-reset
  @import "editor/*.styl"

  // mark
  mark
    padding 2px 4px
    border-radius 2px

  // 链接
  .vditor-ir__link
    text-decoration: none
    color primary-color
    font-weight 500
    cursor pointer
 
  // 引用
  blockquote
    border-left 0.25em solid primary-color
    background primary-bg
    margin 4px
  
  // 标题
  h1, h2, h3, h4
    margin-top 10px
    margin-bottom 10px
  
  // 折叠块
  [data-node-id][fold="1"]
    opacity 1
    display flex
    &:not(ul):not(ol):not(li)
      &::before
        content "▶"
        font-family Code
        margin-right 0.2em
      
      &::after
        content "..."
    
