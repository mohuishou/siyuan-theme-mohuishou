  --b3-vditor-inline-strong-color: #202124;
  --b3-vditor-inline-em-color: #202124;
  --b3-vditor-inline-s-color: #202124;
  --b3-vditor-inline-link-color: #2f54eb;
  --b3-vditor-inline-mark-background: #ffedc9;
